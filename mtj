#!/usr/bin/env ruby

require 'pp'

patterns  = {
              /^[`]{3}.*$/              =>  '{code}',
              /`([^`]+)`/               =>  '{{\1}}',
            }

output = STDIN.read

patterns.each do | pattern, replacement |
  output.gsub!( pattern, replacement )
end

output.gsub!( /^#+/ ) do | match |
  "h" + match.length.to_s + '.'
end

## Doesn't workâ€¦
output.gsub!( '/^(h\d.*)#+$', '\1' )

STDOUT.puts output